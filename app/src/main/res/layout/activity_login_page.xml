<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginSignup.LoginPageActivity">

    <ImageView
        android:id="@+id/arrow_left1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:clipToOutline="true"
        android:clickable="true"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/loginHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Let's Sign you in."
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrow_left1" />

    <TextView
        android:id="@+id/body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="Welcome Back,"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginHeader1" />

    <TextView
        android:id="@+id/body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="you have been missed"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        app:boxStrokeColor="#900090"
        app:boxBackgroundColor="#DDDDDD"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLoginPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        app:boxStrokeColor="#900090"
        app:boxBackgroundColor="#DDDDDD"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#3C74E1"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"
        app:layout_constraintTop_toBottomOf="@id/textInputLoginPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/button_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:text="Sign in"
        android:backgroundTint="#676F9D"
        app:layout_constraintTop_toBottomOf="@id/body2" />

    <View
        android:id="@+id/divider1"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_marginTop="288dp"
        android:layout_marginStart="40dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/body2"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_marginTop="288dp"
        android:layout_marginStart="235dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/body2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:text="or"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clickable="true"
        app:buttonSize="wide"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/accountQn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="80dp"
        android:text="Don't have an account?  "
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/googleLogo" />

    <TextView
        android:id="@+id/registerNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="45dp"
        android:text="Register Now"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#3C74E1"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/googleLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/loginProgressBar"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginTop="200dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_signIn" />


</androidx.constraintlayout.widget.ConstraintLayout>