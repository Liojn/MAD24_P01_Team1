<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/homepage_bg_gradient"
    tools:ignore="HardcodedText, ContentDescription">

    <View
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/banner_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fitness"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitness_pic"
        app:tint="#A1A7CD" />

    <ImageButton
        android:id="@+id/notiButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:tint="#2d3250"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@id/profileButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noti_pic" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:padding="0dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        app:srcCompat="@drawable/user_profile_chatbot" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning â˜¼"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#424769"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="@+id/banner"
        app:layout_constraintTop_toBottomOf="@+id/fitness" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, User!!!!!\nWhat would you like to do today?"
        android:textSize="20sp"
        android:textColor="#2d3250"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="15dp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="@+id/banner"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!--    Add buttons for your features here :) -->

    <!-- Navigation Bar Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#2d3250"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:tint="#676f9d"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_food"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:srcCompat="@drawable/button_home" />

        <ImageButton
            android:id="@+id/nav_food"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/nav_home"
            app:layout_constraintEnd_toStartOf="@id/nav_fitness"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            app:tint="#676f9d"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:srcCompat="@drawable/button_food" />

        <ImageButton
            android:id="@+id/nav_fitness"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:tint="#676f9d"
            app:layout_constraintEnd_toStartOf="@id/nav_calendar"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/nav_food"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/button_dumbbell" />

        <ImageButton
            android:id="@+id/nav_calendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/nav_fitness"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#676f9d"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:srcCompat="@drawable/button_calendar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Chat Button -->
    <ImageButton
        android:id="@+id/chat_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_chat"
        app:tint="#676f9d" />
</androidx.constraintlayout.widget.ConstraintLayout>
