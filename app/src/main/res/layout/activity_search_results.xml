<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".foodtracker.SearchResultsActivity">

    <!-- Back button to allow users to navigate back to the FoodTracker page -->
    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="204dp"
        android:text="Back"
        android:backgroundTint="#9299BF"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SearchBar that allows user to enter their search item -->
    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/app_bg"
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- A layout container that will display the search result -->
    <LinearLayout

        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_bg"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar">

        <TextView
            android:id="@+id/resultTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:padding="16dp"
            android:textSize="23sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/app_primary_text"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="+"
            />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>