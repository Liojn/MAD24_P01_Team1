<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageButton
        android:id="@+id/button_previous_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_week_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nov 15 - Nov 21"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/button_previous_week"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button_next_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintStart_toEndOf="@+id/text_week_range"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>