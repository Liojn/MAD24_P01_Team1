<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/botProfile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:background="@drawable/user_profile_chatbot"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textMessage"
        />
    <TextView
        android:id="@+id/chatbotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        app:layout_constraintBottom_toTopOf="@+id/botProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/textMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="3dp"
        android:background="@drawable/bot_bubble"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/botProfile"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>