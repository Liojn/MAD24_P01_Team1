<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.FitnessUltimate.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_widget"
    android:theme="@style/Theme.FitnessUltimate.AppWidgetContainer">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fitness HeatMap"
        android:textSize="13dp" />

    <FrameLayout
        android:id="@+id/widget_month_container"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="143dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_month1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_month2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_month3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold" />

    </FrameLayout>

    <GridView
        android:id="@+id/calendar_widget_gridView"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginStart="1.5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:numColumns="7" />

</RelativeLayout>