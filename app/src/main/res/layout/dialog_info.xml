<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_border_info">

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Instructions"
        android:gravity="center"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drag the water droplets into the water tank to track your daily water intake. Each small droplet adds 100ml and each large droplet adds 300ml. Try to reach your daily goal of 2000ml!"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/instructions"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

